<!DOCTYPE html>
<html lang="en">
<head>
    <title>New Skill</title>
    <%- include('../header') %>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th colspan='2'>New Skill</th>
            </tr>
        </thead>
        <tbody>
            <% skills.forEach(function(s, idx) { %>
                <tr>
                  <td>
                  </form>Skill <%= idx + 1 %>: <a href="/skills/<%= idx %>"><%= s.skill %></a></td>
                </tr>
              <% }); %>
        </tbody>
        <tfoot>
            <tr>
                <form action="/skills" method="POST" autocomplete="off">
                    <td><input id="input-box" type="text" name="skill"></td>
                    <td><button id="add-button" type="submit">ADD SKILL</button></td>
                </form>
            </tr>
        </tfoot>
    </table>
</body>
</html>